{
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "listFiles": false,
    "strictNullChecks": true,
    "traceResolution": false,
    "pretty": true,
    "lib" : [
      "es6", "dom"
    ],
    "types" : [
      "node"
    ]
    // strict compilerOptions
    /*
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny" : true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    */
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compileOnSave": false
}
